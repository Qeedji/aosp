<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="328dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="334dp"
        android:layout_marginBottom="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/red_rect"
            android:onClick="onRadioButtonClicked"
            android:text="@string/radiobutton1"
            android:textColor="#FFFF0000"
            android:textColorHighlight="#FFFF0000"
            android:textColorHint="#FFFF0000"
            android:textColorLink="#FFFF0000"
            android:layout_margin="16dp"
            android:textSize="50sp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_rect"
            android:onClick="onRadioButtonClicked"
            android:text="@string/radiobutton2"
            android:textColor="#FF00FF00"
            android:textColorHighlight="#FF00FF00"
            android:textColorHint="#FF00FF00"
            android:textColorLink="#FF00FF00"
            android:layout_margin="16dp"
            android:textSize="50sp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orange_rect"
            android:onClick="onRadioButtonClicked"
            android:text="@string/radiobutton3"
            android:textColor="#FFFFA500"
            android:textColorHighlight="#FFFFA500"
            android:textColorHint="#FFFFA500"
            android:textColorLink="#FFFFA500"
            android:layout_margin="16dp"
            android:textSize="50sp" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/off_rect"
            android:onClick="onRadioButtonClicked"
            android:text="@string/radiobutton4"
            android:textColor="#FF000000"
            android:textColorHighlight="#FF000000"
            android:textColorHint="#FF000000"
            android:textColorLink="#FF000000"
            android:layout_margin="16dp"
            android:textSize="50sp" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>